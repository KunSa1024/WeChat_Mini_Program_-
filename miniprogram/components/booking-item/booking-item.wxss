/* components/booking-tiem/booking-tiem.wxss */


/* 图片 */
.auto-img {
  width: 100%;
  height: 100%;
  display: block;
}

.booking-item {
  height: 80rpx;
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.booking-item .booking-item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  /* background-color: pink; */
}

.booking-item .booking-item-info {
  width: calc(100% - 100rpx);
  display: flex;
  justify-content: space-between;
  /* border-bottom: 1px solid #e8e8e8; */
  padding-left: 20rpx;
  align-items: center;
  /* padding-bottom: 20rpx; */
}

.booking-item .booking-item-info .info-box {
  
}

.booking-item .booking-item-info .info-box .title-box {
  display: flex;
  
}

.booking-item .booking-item-info .info-box .title-box .title {
  font-size: 30rpx;
  font-weight: bold;
}

.booking-item .booking-item-info .info-box .title-box .payment,
.booking-item .booking-item-info .info-box .title-box .date {
  font-size: 24rpx;
  /* color: #999; */
  line-height: 44rpx;
}

.booking-item .booking-item-info .info-box .title-box .payment {
  margin-left: 40rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
}

.booking-item .booking-item-info .info-box .title-box .date {
  margin-left: 20rpx;
}

.booking-item .booking-item-info .info-box .infuse {
  font-size: 24rpx;
  color: #999;
}

.booking-item .booking-item-info .booking-item-right {
  display: flex;
}

.booking-item .booking-item-info .booking-item-right .info-price {
  font-weight: bold;
  /* color: #00b26a; */
  font-size: 28rpx;
}

.booking-item .booking-item-info .booking-item-right .info-price.sr {
  font-weight: bold;
  color: #00b26a;
  font-size: 28rpx;
}

.booking-item .booking-item-info .booking-item-right .info-price.zc {
  font-weight: bold;
  color: #e60012;
  font-size: 28rpx;
}

.booking-item .booking-item-info .booking-item-right .delete {
  width: 40rpx;
  height: 40rpx;
  /* background-color: pink; */
  margin-left: 20rpx;
}

