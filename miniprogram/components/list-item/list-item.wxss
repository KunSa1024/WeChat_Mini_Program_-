/* components/list-item/list-item.wxss */

.list-item {
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.list-item .list-item-title {
  margin-right: auto;
  color: #666;
  font-size: 28rpx;
}

.list-item .list-item-icon {
  width: 40rpx;
  height: 40rpx;
}

.list-item .list-item-icon .auto-img {
  width: 100%;
  height: 100%;
  display: block;
}